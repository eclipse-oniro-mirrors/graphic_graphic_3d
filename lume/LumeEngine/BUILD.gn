config("lume_default") {
  cflags = [
    "-Wno-unused-function",
    "-Wno-unused-parameter",
    "-Wno-sign-compare",
    "-Wno-unused-variable",
    "-Wno-unused-private-field",
    "-Wno-tautological-unsigned-zero-compare",
    "-Wno-logical-op-parentheses",
    "-fno-rtti",
    "-fvisibility=hidden",
    "-ffunction-sections",
    "-fdata-sections",
  ]

  cflags_cc = [
    "-std=c++17",
    "-Wno-thread-safety-attributes",
  ]

  ldflags = [
    "-fuse-ld=lld",
    "-flto=thin",
    "-Wl,--no-threads",
    "-Wl,--build-id=sha1",
    "-Wl,--gc-sections",
    "-Wl,--exclude-libs,ALL",
  ]

  if (use_musl) {
    ldflags -= [ "-Wl,--no-threads" ]
  }

  if (LUME_OHOS_BUILD) {
    defines = [
      "__OHOS_PLATFORM__",
    ]
  }

  defines += [
    "LIB_ENGINE_CORE=${LIB_ENGINE_CORE}",
    "LIB_RENDER=${LIB_RENDER}",
    "LIB_CORE3D=${LIB_CORE3D}"
  ]
}

config("lume_engine_config") {
