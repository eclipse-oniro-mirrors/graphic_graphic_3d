    "CORE_HIDE_SYMBOLS=1",
    "CORE_WARNINGS_AS_ERRORS=0",
    "CORE_DEV_ENABLED=${CORE_DEV_ENABLED}",
    "CORE_LOG_TO_CONSOLE=1",
    "CORE_LOG_TO_DEBUG_OUTPUT=1",
    "CORE_LOG_TO_FILE=0",
    "CORE_VALIDATION_ENABLED=0",
