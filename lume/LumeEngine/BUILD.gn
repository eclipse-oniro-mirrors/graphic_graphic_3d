  cflags_cc = [
    "-std=c++17",
    "-Wno-thread-safety-attributes",
    "-fvisibility=hidden",
    "-fdata-sections",
    "-ffunction-sections",
    "-fno-rtti",
    "-fvisibility-inlines-hidden",
    "-fno-asynchronous-unwind-tables",
    "-fno-unwind-tables",
    "-fno-exceptions"
