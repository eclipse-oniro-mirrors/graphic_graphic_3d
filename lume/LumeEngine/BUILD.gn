config("lume_base_api") {
  include_dirs = [
    "${LUME_BASE_PATH}/api",
  ]

  defines = [
    "BASE_TESTS_ENABLED=0",
    "BASE_WARNINGS_AS_ERRORS=0"
  ]

  if (CORE_LOG_ENABLED) {
    defines += [
      "CORE_LOG_DISABLED=0",
      "CORE_LOG_DEBUG=1",
    ]
  } else {
    defines += [
      "CORE_LOG_DISABLED=1",
      "CORE_LOG_DEBUG=0",
    ]
  }

}

config("lume_engine_api") {
  include_dirs = [
    "api",
  ]

  if (LUME_OHOS_BUILD) {
    include_dirs += [
      "api/platform/ohos/",
    ]
  }

  defines = [
    "CORE_BUILD_BASE=1",
    "CORE_HIDE_SYMBOLS=1",
    "CORE_PERF_ENABLED=0",
    "CORE_USE_COMPILER_GENERATED_STATIC=1",
  ]

  if (BUILDTYPE == "Release") {
    defines += [
      "CORE_LOG_NO_DEBUG=0",
    ]
  }
  if (BUILDTYPE == "MinSizeRel") {
    defines += [
      "CORE_LOG_NO_DEBUG=0"
    ]
  }
  if (BUILDTYPE == "RelWithDebInfo") {
    defines += [
      "CORE_LOG_NO_DEBUG=0"
